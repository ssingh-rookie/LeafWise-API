# ============================================================================
# LeafWise API - Environment Variables
# ============================================================================
# Copy this file to .env and fill in your values
# ============================================================================

# ============================================================================
# DATABASE
# ============================================================================
# Pooled connection for application (use port 6543 for Supabase)
DATABASE_URL="postgresql://postgres:your-password@db.your-project.supabase.co:6543/postgres?pgbouncer=true"

# Direct connection for migrations (use port 5432)
DIRECT_URL="postgresql://postgres:your-password@db.your-project.supabase.co:5432/postgres"

# Local development (uncomment for local Docker)
# DATABASE_URL="postgresql://postgres:postgres@localhost:5432/leafwise"
# DIRECT_URL="postgresql://postgres:postgres@localhost:5432/leafwise"

# ============================================================================
# SUPABASE
# ============================================================================
SUPABASE_URL="https://your-project.supabase.co"
SUPABASE_ANON_KEY="eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9..."
SUPABASE_SERVICE_ROLE_KEY="eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9..."

# ============================================================================
# AI PROVIDERS
# ============================================================================
# Plant.id - Plant identification (https://plant.id/)
PLANT_ID_API_KEY="your-plant-id-api-key"

# Anthropic - Claude AI (https://console.anthropic.com/)
ANTHROPIC_API_KEY="sk-ant-api03-..."

# OpenAI - GPT & Embeddings (https://platform.openai.com/)
OPENAI_API_KEY="sk-..."

# Google AI - Gemini fallback (https://aistudio.google.com/)
GOOGLE_AI_API_KEY="AIzaSy..."

# ============================================================================
# AUTHENTICATION
# ============================================================================
# JWT secret (minimum 32 characters)
JWT_SECRET="your-super-secret-jwt-key-minimum-32-characters"

# Token expiration
JWT_EXPIRATION="7d"

# ============================================================================
# APPLICATION
# ============================================================================
NODE_ENV="development"
PORT="3000"
LOG_LEVEL="debug"

# CORS origins (comma-separated)
CORS_ORIGINS="http://localhost:3000,http://localhost:8081"

# ============================================================================
# OPTIONAL: PAYMENT (Stripe)
# ============================================================================
# STRIPE_SECRET_KEY="sk_test_..."
# STRIPE_WEBHOOK_SECRET="whsec_..."
# STRIPE_PRICE_PREMIUM_MONTHLY="price_..."
# STRIPE_PRICE_PREMIUM_YEARLY="price_..."

# ============================================================================
# OPTIONAL: MONITORING
# ============================================================================
# SENTRY_DSN="https://...@sentry.io/..."

# ============================================================================
# OPTIONAL: PUSH NOTIFICATIONS (Expo)
# ============================================================================
# EXPO_ACCESS_TOKEN="..."
