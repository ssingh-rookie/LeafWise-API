# Token expiration
JWT_EXPIRATION="7d"

# ============================================================================
# APPLICATION
# ============================================================================
NODE_ENV="development"
PORT="3000"
LOG_LEVEL="debug"

# App URL (used for password reset redirects and deep links)
APP_URL="http://localhost:3000"

# CORS origins (comma-separated)
CORS_ORIGINS="http://localhost:3000,http://localhost:8081"

