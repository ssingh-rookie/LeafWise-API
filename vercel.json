{
  "version": 2,
  "framework": null,
  "installCommand": "pnpm install",
  "buildCommand": "pnpm prisma generate && pnpm build && mkdir -p api && cp dist/main.js api/index.js",
  "functions": {
    "api/index.js": {
      "memory": 1024,
      "maxDuration": 60
    }
  },
  "rewrites": [
    { "source": "/api/v1/:path*", "destination": "/api" },
    { "source": "/health", "destination": "/api" },
    { "source": "/:path*", "destination": "/api" }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "regions": ["syd1"]
}
